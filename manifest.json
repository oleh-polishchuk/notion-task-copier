{
  "manifest_version": 2,

  "name": "Notion Task Copier",
  "description": "This extension allow you to copy ID and Title of selected task on Notion",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "128": "icon_128.png",
    "16": "icon_16.png"
  },

  "permissions": [
    "tabs",
    "<all_urls>",
    "activeTab",
    "https://ajax.googleapis.com/",
    "clipboardWrite"
  ]
}
